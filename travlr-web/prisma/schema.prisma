// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  engineType = "library"
}

datasource db {
  provider = "postgresql"
}

// NextAuth Models

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  password      String?   // For credentials auth if needed
  accounts      Account[]
  sessions      Session[]
  
  // App specific
  trips         Trip[]    @relation("TripOwner")
  sharedTrips   TripUser[]
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// App Models

model Trip {
  id          String   @id @default(cuid())
  name        String?  // Made optional to support "New Trip" without immediate name, or default
  tripName    String?  // Alias or specific name field if 'name' is used for internal ID
  destination String?
  startDate   DateTime?
  endDate     DateTime?
  imgUrl      String?
  budget      Decimal?  // Total budget for the trip
  currency    String    @default("USD")
  
  userId      String
  owner       User     @relation("TripOwner", fields: [userId], references: [id], onDelete: Cascade)
  
  members     TripUser[]
  days        Day[]
  cities      City[]
  expenses    Expense[]
  memories    Memory[]
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Day {
  id        String   @id @default(cuid())
  tripId    String
  trip      Trip     @relation(fields: [tripId], references: [id], onDelete: Cascade)
  
  date      DateTime
  dayNumber Int      // Day 1, Day 2, etc.
  theme     String?  // E.g., "Cultural Exploration", "Beach Day"
  
  activities ItineraryItem[]
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([tripId, dayNumber])
}

model ItineraryItem {
  id          String   @id @default(cuid())
  dayId       String
  day         Day      @relation(fields: [dayId], references: [id], onDelete: Cascade)
  
  name        String
  description String?  @db.Text
  startTime   String?  // e.g. "10:00 AM" - Consider using separate DateTime fields for strict sorting if needed
  endTime     String?
  location    String?
  lat         Decimal?
  lng         Decimal?
  
  order       Int      @default(0)
  
  placeId     String?
  place       Place?   @relation(fields: [placeId], references: [id])
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Memory {
  id            String   @id @default(cuid())
  tripId        String
  trip          Trip     @relation(fields: [tripId], references: [id], onDelete: Cascade)
  
  type          String   // photo, video, note, document
  title         String
  description   String?  @db.Text
  fileUrl       String?  // URL for photos, videos, documents
  thumbnailUrl  String?  // Thumbnail for videos
  content       String?  @db.Text // For notes (markdown content)
  date          DateTime
  location      String?
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Expense {
  id          String   @id @default(cuid())
  tripId      String
  trip        Trip     @relation(fields: [tripId], references: [id], onDelete: Cascade)
  
  amount      Decimal
  currency    String   @default("USD")
  category    String   // food, transport, lodging, activities, shopping, other
  description String?
  date        DateTime
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model TripUser {
  id        String   @id @default(cuid())
  tripId    String
  userId    String
  trip      Trip     @relation(fields: [tripId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([tripId, userId])
}

model City {
  id        String   @id @default(cuid())
  name      String
  lat       Decimal?
  lng       Decimal?
  tripId    String
  trip      Trip     @relation(fields: [tripId], references: [id], onDelete: Cascade)
  
  places    Place[]
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Place {
  id           String   @id @default(cuid())
  name         String
  address      String?
  phoneNumber  String?
  lat          Decimal?
  lng          Decimal?
  category     String?
  rating       Decimal?
  price        Int?
  photo        String?
  reason       String?  @db.Text
  googleUrl    String?
  url          String?
  
  cityId       String
  city         City     @relation(fields: [cityId], references: [id], onDelete: Cascade)
  
  itineraryItems ItineraryItem[]
  
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}
